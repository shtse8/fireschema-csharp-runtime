<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework> <!-- Upgrade to net6.0 for better compatibility -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings> <!-- Be explicit for clarity -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo> <!-- Disable auto-generation -->
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute> <!-- Disable auto-generation -->
    <RootNamespace>FireSchema.CS.Runtime</RootNamespace>
    <AssemblyName>FireSchema.CS.Runtime</AssemblyName>
    <Version>0.1.0</Version> <!-- Initial version -->
    <Authors>shtse8</Authors>
    <Description>C# Runtime Library for code generated by FireSchema. Provides base classes and helpers for interacting with Firestore.</Description>
    <PackageProjectUrl>https://github.com/shtse8/fireschema-csharp-runtime</PackageProjectUrl>
    <RepositoryUrl>https://github.com/shtse8/fireschema-csharp-runtime.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression> <!-- Or your chosen license -->
    <PackageTags>firestore;odm;codegeneration;fireschema;csharp;dotnet</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild> <!-- To easily create NuGet package -->
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageId>FireSchema.CS.Runtime</PackageId> <!-- NuGet Package ID -->

  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <!-- Add dependency on Google Firestore SDK -->
    <PackageReference Include="Google.Cloud.Firestore" Version="3.4.0" /> <!-- Check for latest version -->
    <!-- Add other dependencies if needed -->
  </ItemGroup>

</Project>